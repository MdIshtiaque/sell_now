{% extends "layouts/base.html.twig" %}

{% block content %}
<h1>Dashboard</h1>
<p>Welcome back, {{ username }}!</p>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My Products</h5>
                <p>Manage your digital goods.</p>
                <a href="/products/add" class="btn btn-primary mb-3">Add New Product</a>
                <hr>
                {% if products is empty %}
                    <p class="text-muted">No products yet. Add your first product!</p>
                {% else %}
                    <ul class="list-group">
                    {% for product in products %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ product.title }}</strong>
                                <br><small class="text-success">${{ product.price }}</small>
                            </div>
                            {% if product.image_path %}
                                <img src="/{{ product.image_path }}" alt="" style="width:40px;height:40px;object-fit:cover;">
                            {% endif %}
                        </li>
                    {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Earnings</h5>
                <p>Not implemented yet.</p>
            </div>
        </div>
    </div>
     <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Your Public Page</h5>
                <!-- Inconsistent: hardcoded link structure -->
                <a href="/{{ username }}" target="_blank" class="btn btn-outline-info">View Shop</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
